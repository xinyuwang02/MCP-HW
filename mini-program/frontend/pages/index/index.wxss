page {
  height: 100vh;
  /* display: flex;
  flex-direction: column; */
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 98%;
  height: 100vh;
  justify-content: center;
  overflow-y: hidden;
}

.title {
  font-size: 18px;
  margin-bottom: 20px;
}

.button-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  
}

.button-item {
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx;
  background-color: #4CAF50; /* 更深的绿色 */
  color: #fff;
  border: none;
  border-radius: 5px;
  max-width: 110px;
}

.avatar {
  width: 30px;
  height: 30px;
  margin-right: 10px;
  border-radius: 50%;
}
.button-text {
  flex: 1; /* 让文字占据按钮剩余空间 */
  text-align: center;
}