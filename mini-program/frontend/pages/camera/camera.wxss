/* pages/camera/camera.wxss */
.camera-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 100vh;
}

.button-container {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-top: 10px;
}

.capture-button, .send-button {
  flex: 1;
  margin: 0 5px;
  padding: 10px;
  background-color: #4CAF50; /* 使用更深的绿色 */
  color: #fff;
  border: none;
  border-radius: 5px;
  max-width: 120px;
}

.captured-photo {
  max-width: 100%;
  max-height: 70vh;
  margin-top: 10px;
  border-radius: 5px;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.3); /* 添加阴影效果 */
}
